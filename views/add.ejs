<%- include('partials/header') %>

<div class="w-full min-h-screen bg-zinc-800 px-10 py-5 text-white">
  <h1 class="text-xl">Create a new post.</h1>
  <hr class="w-1/10 opacity-20 mt-4" />
  <form action="/createpost" class="mt-2" method="post" enctype="multipart/form-data">
    <input class="block w-1/3 px-3 py-2 mt-3 " type="file" name="postimage" />
    <input class="block w-1/3 px-3 py-2 mt-3 text-black" type="text" name="title"  placeholder="Title" />
    <textarea
      class="block w-1/3 px-3 py-2 mt-3 h-60 text-black"
      type="text"
      name="Description"
      placeholder="Description"
      
    ></textarea>

    <input class="block w-1/3 border-2 mt-3 bg-red-500 px-3" type="submit" name=""  value="submit" />
  </form>
</div>
<%- include('partials/footer') %>
